<div class="grey-text">
<h3>New Account</h3>
</div>
<br>
<%= form_for(@user, url:'/signup') do |f|%>
<%=render 'layouts/shared_errors', form_object: @user%>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :email %>
<%= f.email_field :email %>
<br>
<%= f.label :password %>
<%= f.password_field :password %>
<br>
<br>
<%= f.submit "Sign Up"%>
<br>
<% end %>