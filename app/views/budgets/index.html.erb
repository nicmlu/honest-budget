<div class="grey-text">
<h3> <%= current_user.name%>'s Honest Budgets </h3>
</div>
<br>

<% if @budgets == [] %>
<br>
<br>

  <div class="row">
    <div class="col s12 m12">
      <div class="card grey">
        <div class="card-content white-text">
          <span class="card-title">You have not created a Budget.</span>
        </div>
        <div class="card-action black-text">
          <%= link_to "Create a New Budget", new_budget_path, method:'get'  %>
        </div>
      </div>
    </div>
  </div>


<% else %>

<table class="striped highlight center">
  <thead>
    <th>Name</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Delete?</th>
  </thead>

  <tbody>

    <% @budgets.each do |budget|%>
        <tr>
            <td> <%= link_to budget.name, user_budget_path(current_user, budget) %></td>
            <td>  <%= budget.start_date.strftime('%a %b %d, %Y') %> </td>
            <td>  <%= budget.end_date.strftime('%a %b %d, %Y') %> </td>
            <td> <%= link_to "Delete Budget", budget, method: :delete, data: { confirm: "Are you sure?", disable_with: "Processing..." } %> </td>
        </tr>
    <% end %>

  </tbody>
</table>
<% end %>