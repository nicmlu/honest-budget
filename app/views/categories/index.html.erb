<div class="lighten-1">
<h3> <%= current_user.name%>'s Budget Categories </h3>
</div>
<br>

<% if @categories == [] %>
<br>
<br>

  <div class="row">
    <div class="col s12 m6">
      <div class="card grey darken-4">
        <div class="card-content white-text">
          <span class="card-title">You have no categories created.</span>
        </div>
        <div class="card-action">
          <%= link_to "Add a New Category", new_category_path, method:'get'  %>
        </div>
      </div>
    </div>
  </div>


<% else %>
    
      <div class="card grey lighten-2">
        <span class="white-text">    
        <% @categories.each do |category|%>
        <ul>
            <li> <%= category.name %></li>
        </ul>
    <% end %>
        </span>
      </div>
    


<% end %>


<form action="/categories/new" method="get">
  <label for="fname">Add a New Category:</label><br>
  <input type="text" name="name"><br>
  <input type="submit" value="Submit">
</form>
